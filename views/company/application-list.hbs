<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Online Job Portal</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="/images/favicon.png" rel="icon">
    <link href="/images/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Montserrat:300,400,500,700"
        rel="stylesheet">

    <!-- Bootstrap CSS File -->
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/lib/animate/animate.min.css" rel="stylesheet">
    <link href="/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="/stylesheets/style.css" rel="stylesheet">

</head>

<body>

    <!--==========================
    Header
  ============================-->
    <header id="header" style="background: #000;">
        <div class="container-fluid">

            <div id="logo" class="pull-left">
                <h1><a href="#intro" class="scrollto">JobPortal</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="#intro"><img src="/images/logo.png" alt="" title="" /></a>-->
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li><a href="/company" style="margin:10px;">Home</a></li>
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </header><!-- #header -->

    {{#if alertMessage}}
    <div class="myAlert-top alert alert-success">
        <strong>{{alertMessage}}</strong>
    </div>
    {{/if}}

    <section id="internship" style="margin-top: 14vh;min-height:70vh">
        <div class="container">
            {{#if applications}}
            <h2 class="heading mt-5" id="know-more">Job Applications:
            </h2>
            <div class="row">
                {{#each applications}}
                <div class="col-sm-12">
                    <div class="card mb-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-md-4 ms-1">
                                <img src="/images/users/profile/{{user_id}}.jpg" class="img-fluid rounded-start"
                                    alt="..." style="height: 250px;">
                            </div>
                            <div class="col-md-4">
                                <div class="card-body">
                                    <h5 class="card-title">Applicant Name : <span
                                            style="font-weight: 600;">{{username}}</span></h5>
                                    <p class="card-text">Contact No : <span
                                            style="font-weight: 600;">{{user_mobile}}</span> <br>
                                        Contact Email : <span style="font-weight: 600;">{{user_mail}}</span>
                                    </p>
                                    <p class="card-text"> <a href="/images/users/resume/{{user_id}}.pdf"
                                            target="_blank"> View Resume</a> <a
                                            href="/images/users/resume/{{user_id}}.pdf" target="_blank" download
                                            style="color: blue;">
                                            Download Resume</a></p>

                                    <p class="card-text"><small class="text-muted">Applied on {{applyDate}}</small>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card-body">
                                    <p class="card-text justify-content-space-around">
                                        {{#if applied}}
                                        <a href="/company/short-list/{{_id}}"
                                            class="btn btn-outline-success ms-5 mb-4">Shortlist
                                            <i class="fa-solid fa-list-check"></i>
                                        </a>
                                        <br>
                                        <a href="/company/reject-application/{{_id}}"
                                            class="btn btn-outline-danger ms-5"
                                            onclick="return confirm('Are you sure you want to reject this JOB APPLICATION?');">Reject
                                            <i class="fa-solid fa-xmark"></i></a>
                                    </p>
                                    {{else}}
                                    {{#if shortlisted}}
                                    <a href="/company/accept-application/{{_id}}"
                                        class="btn btn-outline-success ms-5 mb-4">Accept
                                        <i class="fa-solid fa-circle-check"></i>
                                    </a>
                                    <br>
                                    <a href="/company/reject-application/{{_id}}" class="btn btn-outline-danger ms-5"
                                        onclick="return confirm('Are you sure you want to reject this JOB APPLICATION?');">Reject
                                        <i class="fa-solid fa-xmark"></i></a>
                                    </p>
                                    {{else}}
                                    <p class="card-text text-success">Accepted the Application</p>
                                    {{/if}}
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                {{/each}}

            </div>
            {{else}}
            <h2 class="heading text-center pt-5" id="know-more">
                OOPS!!!! There Are No applications For You Now<br>
            </h2>
            {{/if}}
        </div>
    </section>


    <!--==========================
    Footer
  ============================-->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong>JobPortal</strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by Us
            </div>
        </div>
    </footer><!-- #footer -->

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="/lib/jquery/jquery.min.js"></script>
    <script src="/lib/jquery/jquery-migrate.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/superfish/hoverIntent.js"></script>
    <script src="/lib/superfish/superfish.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/counterup/counterup.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/lib/isotope/isotope.pkgd.min.js"></script>
    <script src="/lib/lightbox/js/lightbox.min.js"></script>
    <script src="/lib/touchSwipe/jquery.touchSwipe.min.js"></script>
    <!-- Contact Form JavaScript File -->
    <script src="contactform/contactform.js"></script>

    <!-- Template Main Javascript File -->
    <script src="/javascripts/main.js"></script>

</body>

</html>